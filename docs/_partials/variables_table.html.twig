<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Type</th>
        <th scope="col">Values</th>
        <th scope="col">Example</th>
    </tr>
    </thead>
    <tbody>
    {% for variableName,variableDefinition in variables %}
    <tr>
        <th scope="row">{{ loop.index }}</th>
        <td>[{{ variableName }}]</td>
        <td>{{ variableDefinition.type }}</td>
        <td>
            {% if variableDefinition.values is defined %}
                {% for value in variableDefinition.values %}
                <span class="badge bg-secondary">{{ value }}</span>
                {% endfor %}
            {% endif %}
        </td>
        <td>
            {% if variableDefinition.example is defined %}
            <span class="badge bg-secondary">{{ variableDefinition.example }}</span>
            {% endif %}
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>