<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Type</th>
        <th scope="col">Example</th>
    </tr>
    </thead>
    <tbody>
    {% for variable in variables %}
    <tr>
        <th scope="row">{{ loop.index }}</th>
        <td>[{{ variable.name }}]</td>
        <td>{{ variable.type }}</td>
        <td>
            {% if variable.example is defined %}
            <span class="badge bg-secondary">{{ variable.example }}</span>
            {% endif %}
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>